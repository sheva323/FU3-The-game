{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-unused-vars": "warn",
    "react/self-closing-comp": "warn",
    "import/order": [
      "warn",
      {
        "groups": [
          "type",
          "builtin",
          "object",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "~/**",
            "group": "external",
            "position": "after"
          }
        ],
        "newlines-between": "always"
      }
    ]
  }
}
